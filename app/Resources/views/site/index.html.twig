{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sites list</h1>

    <table>
        <thead>
            <tr>
                <th>Sitenom</th>
                <th>Type</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>Description</th>
                <th>Ville</th>
                <th>Adresse</th>
                <th>Svalide</th>
                <th>Siteid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td><a href="{{ path('site_show', { 'siteid': site.siteid }) }}">{{ site.sitenom }}</a></td>
                <td>{{ site.type }}</td>
                <td>{{ site.longitude }}</td>
                <td>{{ site.latitude }}</td>
                <td>{{ site.description }}</td>
                <td>{{ site.ville }}</td>
                <td>{{ site.adresse }}</td>
                <td>{% if site.svalide %}Yes{% else %}No{% endif %}</td>
                <td>{{ site.siteid }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('site_show', { 'siteid': site.siteid }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('site_edit', { 'siteid': site.siteid }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('site_new') }}">Create a new site</a>
        </li>
    </ul>
{% endblock %}
