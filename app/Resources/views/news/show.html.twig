{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ news.titre }}</h1>

    {% if news.date %}<span style="color:grey;font-size:0.8em;">{{ news.date|date('Y-m-d H:i:s') }}</span>{% endif %}

    <br>{{ news.contenu | nl2br }}


    <br>
    <br><a href="{{ path('news_index') }}">liste des news</a>
    
    {% if is_granted('ROLE_ADMIN') %}
        <br><br><a href="{{ path('news_edit', { 'nid': news.nid }) }}">modifier</a>
        <br>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
    {% endif %}
{% endblock %}
